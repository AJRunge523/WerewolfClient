<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item android:id="@android:id/background">
    <shape>
        <corners android:radius="5dip" />
        <gradient
                android:startColor="#FF3333"
                android:endColor="#000000"
                android:angle="270"
        />
    </shape>
</item>

<item android:id="@android:id/secondaryProgress">
    <clip>
        <shape>
            <corners android:radius="5dip" />
            <gradient
                    android:startColor="#ff00d300"
                    android:centerColor="#ff00b600"
                    android:centerY="0.75"
                    android:endColor="#ff0acb00"
                    android:angle="270"
            />
        </shape>
    </clip>
</item>
<item
    android:id="@android:id/progress"
>
    <clip>
        <shape>
            <corners
                android:radius="5dip" />
            <gradient
                android:startColor="#FFDE5C"
                android:centerColor="#FFE88F"
                android:centerY="0.75"
                android:endColor="#FFFDF55a"
                android:angle="270"
                />
        </shape>
    </clip>
</item>

</layer-list>